{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schema.caselaw.nationalarchives.gov.uk/courts.schema.json",
  "title": "Raw Court List",
  "description": "A list of courts",
  "type": "array",
  "items": {
    "type": "object",
    "title": "Raw Court Group",
    "properties": {
      "name": {
        "type": "string"
      },
      "display_name": {
        "type": ["string", "null"]
      },
      "is_tribunal": {
        "type": "boolean"
      },
      "courts": {
        "type": "array",
        "items": {
          "type": "object",
          "title": "Raw Court",
          "properties": {
            "code": {
              "type": "string",
              "pattern": "^[A-Za-z]{2,}(-[A-Za-z0-9]+)*$"
            },
            "name": {
              "type": "string"
            },
            "grouped_name": {
              "type": "string"
            },
            "param": {
              "type": "string",
              "pattern": "^[a-z]{2,}(?:/[a-z0-9]+)?$"
            },
            "extra_params": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^[a-z]{2,}(/[a-z]+)?$"
              }
            },
            "ncn_pattern": {
              "title": "Neutral Citation Pattern",
              "description": "A regular expression pattern which matches valid NCNs from this court.",
              "type": "string"
            },
            "ncn_examples": {
              "title": "Neutral Citation examples",
              "description": "An array of example NCNs for this court.",
              "type": "array",
              "items": {
                "title": "Neutral Citation Number",
                "description": "An example Neutral Citation Number, matching our expected generic NCN pattern.",
                "type": "string",
                "pattern": "^\\[([0-9]{4})\\] ([a-zA-Z]+)(?: ([a-zA-Z]+))? ([0-9]+)(?: \\(([a-zA-Z0-9]+)\\))?$"
              }
            },
            "link": {
              "type": "string",
              "format": "uri"
            },
            "start_year": {
              "type": "integer",
              "minimum": 1066
            },
            "end_year": {
              "type": "integer"
            },
            "listable": {
              "type": "boolean"
            },
            "selectable": {
              "type": "boolean"
            },
            "jurisdictions": {
              "type": "array",
              "items": {
                "title": "Raw Jurisdiction",
                "type": "object",
                "properties": {
                  "prefix": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "code": {
                    "type": "string"
                  }
                },
                "required": ["prefix", "name", "code"],
                "additionalProperties": false
              }
            }
          },
          "required": ["code", "name", "link", "listable", "selectable"],
          "dependentRequired": {
            "end_year": ["start_year"],
            "ncn_pattern": ["ncn_examples"],
            "ncn_examples": ["ncn_pattern"]
          },
          "additionalProperties": false,
          "allOf": [
            {
              "if": { "properties": { "selectable": { "const": true } } },
              "then": { "required": ["param"] }
            },
            {
              "if": { "properties": { "listable": { "const": true } } },
              "then": { "required": ["param"] }
            }
          ]
        }
      }
    },
    "required": ["name", "display_name", "is_tribunal", "courts"],
    "additionalProperties": false
  }
}
